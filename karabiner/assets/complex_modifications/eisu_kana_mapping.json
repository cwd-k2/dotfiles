{
  "title": "英数キー・かなキーの設定",
  "rules": [
    {
      "description": "左右シフト + 左右シフトで英数・かなキーを入力",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": { "mandatory": ["left_shift"] }
          },
          "to": [{ "key_code": "lang1" }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": { "mandatory": ["right_shift"] }
          },
          "to": [{ "key_code": "lang2" }]
        }
      ]
    },
    {
      "description": "左右シフト単体ならば英数・かなキーを入力",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": { "optional": ["any"] }
          },
          "to": {
            "key_code": "left_shift",
            "lazy": true
          },
          "to_if_alone": [{ "key_code": "lang2" }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": { "optional": ["control", "option", "command"] }
          },
          "to": {
            "key_code": "right_shift",
            "lazy": true
          },
          "to_if_alone": [{ "key_code": "lang1" }]
        }
      ]
    }
  ]
}
